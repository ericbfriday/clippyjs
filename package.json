{
  "name": "clippyjs",
  "version": "1.0.0",
  "description": "Add Clippy or his friends to any website for instant nostalgia - modern TypeScript and React implementation.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run build:ts && npm run build:bundle",
    "build:ts": "tsc",
    "build:bundle": "yarn exec rollup -c",
    "watch": "tsc -w",
    "clean": "rm -rf dist",
    "prepublish": "yarn run build",
    "test": "jest",
    "lint": "eslint src/**/*.{ts,tsx}",
    "demo": "yarn dlx http-server . --cors --mimeTypes '{ \"text/javascript\": [\"esm.js\", \"js\"] }'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ericbfriday/clippyjs.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ericbfriday/clippyjs/issues"
  },
  "homepage": "https://github.com/ericbfriday/clippyjs#readme",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^4.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "tslib": "^2.6.0",
    "typescript": "^5.0.0"
  }
}
