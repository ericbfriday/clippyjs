{
  "name": "clippyjs",
  "version": "1.0.0",
  "description": "Add Clippy or his friends to any website for instant nostalgia - modern TypeScript and React implementation.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./react": {
      "import": "./dist/Clippy.js",
      "require": "./dist/Clippy.js"
    }
  },
  "scripts": {
    "build": "yarn clean && yarn build:ts && yarn build:bundle",
    "build:ts": "tsc",
    "build:bundle": "rollup -c",
    "clean": "rm -rf dist",
    "prepublishOnly": "yarn build",
    "test": "jest",
    "lint": "eslint src/**/*.{ts,tsx}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ericbfriday/clippyjs.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ericbfriday/clippyjs/issues"
  },
  "homepage": "https://github.com/ericbfriday/clippyjs#readme",
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^30.0.0-alpha.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rollup": "^4.31.0",
    "rollup-plugin-node-globals": "^1.4.0",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3"
  }
}
