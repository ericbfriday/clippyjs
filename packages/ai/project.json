{
  "name": "@clippyjs/ai",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ai/src",
  "projectType": "library",
  "tags": ["type:lib", "scope:ai", "platform:node"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "yarn workspace @clippyjs/ai build"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/packages/ai"],
      "options": {
        "config": "packages/ai/vite.config.ts",
        "passWithNoTests": false,
        "reportsDirectory": "../../coverage/packages/ai"
      }
    },
    "typecheck": {
      "executor": "@nx/js:tsc",
      "outputs": [],
      "options": {
        "tsConfig": "packages/ai/tsconfig.json",
        "noEmit": true
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf packages/ai/dist"
      }
    }
  }
}
