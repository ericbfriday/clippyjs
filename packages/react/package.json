{
  "name": "@clippyjs/react",
  "version": "1.0.0",
  "description": "React components for ClippyJS agents",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "assets"
  ],
