{
  "name": "@clippyjs/types",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/types/src",
  "projectType": "library",
  "tags": [
    "type:lib",
    "scope:types",
    "platform:agnostic"
  ],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": [
        "{projectRoot}/dist"
      ],
      "options": {
        "command": "yarn workspace @clippyjs/types build"
      }
    },
    "typecheck": {
      "executor": "@nx/js:tsc",
      "outputs": [],
      "options": {
        "tsConfig": "packages/types/tsconfig.json",
        "noEmit": true
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf packages/types/dist"
      }
    }
  }
}
